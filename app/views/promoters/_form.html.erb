<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" type="text/css">

<html class="promo-register-html">

  <header class="promo-register-header">
      <h1 class="dial">loDial</h1>
  </header>

  <div class="promo-register-div">
  <p class="new-promo-heading"><span class="promo-lodial">loDial</span> - Sign Up!</p>

  <div class="promo-register pure-form pure-form-aligned">

    <div class="promo-name-div">
      <%= text_field :name, nil, placeholder: "Name", :class => "promo-name pure-input-1" %>
    </div>

    <div class="promo-company-name-div">
      <%= text_field :company_name, nil, placeholder: "Company Name", :class => "promo-company-name pure-input-1" %>
    </div>

    <div class="promo-email-div">
    <%= text_field :email, nil, placeholder: "Email", :class => "promo-email pure-input-1" %>
    </div>

    <div class="promo-password-div">
      <%= text_field :password, nil, placeholder: "Password", :class => "promo-password pure-input-1" %>
    </div>

    <div class="promo-phone-number-div">
    <%= text_field :phone_number, nil, placeholder: "Phone Number (optional)", :class => "promo-phone-number pure-input-1" %>
    </div>

  <label class="file-upload">
    <%= f.file_field :picture_upload, :class => "upload" %>
    <span class="file-upload-label">Add a Profile Picture <i class="fa fa-picture-o"></i></span>
  </label>

  <div class="btn-create-promo-div">
    <%= submit_tag "Register", :class => "btn-create-promo" %>
  </div>

  </div>
  </div>
</div>
  </html>
<% end %>
